{% extends 'profile/index.html.twig' %}

{% block title %}VetClinic | Добавление животного{% endblock %}

{% block content %}
    <!-- New pet form start -->
    <div class="container">
        <div class="title">Добавление животного</div>
        <div class="content">
            {{ form_start(form) }}
            {% set formErrors = form.vars.errors.form.getErrors(true) %}
            {% if formErrors|length %}
                <div class="user-details">
                    <ul>
                        {% for error in formErrors %}
                            <li class="register-errors">
                                ● {{ error.message }}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
            <div class="user-details">
                <div class="input-box">
                    <span class="details">Кличка животного</span>
                    {{ form_widget(form.name) }}
                </div>
                <div class="input-box">
                    <span class="details">Дата рождения животного</span>
                    {{ form_widget(form.birthday) }}
                </div>
                <div class="input-box">
                    <span class="details">Пол животного</span>
                    {{ form_widget(form.sex) }}
                </div>
                <div class="input-box">
                    <span class="details">Вид животного</span>
                    {{ form_widget(form.kind) }}
                </div>
            </div>
            <div class="button">
                <input type="submit" value="Добавить">
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <!-- New pet form end -->
{% endblock %}
