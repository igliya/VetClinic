<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" type="image/png" href="{{ asset('icons/favicon.png') }}">
        <title>{% block title %}VetClinic{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
                  integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
            {% block homestyles %}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <!-- Header start -->
        <header class="header">
            <div class="wrapper">
                <div class="header__wrapper">
                    <div class="header__logo">
                        <a href="{{ path('app_home') }}" class="header__logo-link">
                            <img src="{{ asset('images/logo.png') }}" alt="Logo" class="header__logo-pic">
                        </a>
                    </div>
                    <nav class="header__nav">
                        <ul class="header__list">
                            {% if not is_granted('ROLE_USER') %}
                                <li class="header__item">
                                    <a href="{{ path('app_login') }}" class="header__link">Вход</a>
                                </li>
                                <li class="header__item">
                                    <a href="{{ path('app_register') }}" class="header__link">Регистрация</a>
                                </li>
                            {% else %}
                                <li class="header__item">
                                    <a href="{{ path('app_home') }}" class="header__link">Создать тикет</a>
                                </li>
                                <li class="header__item">
                                    <div class="dropdown">
                                        <button class="dropdown-button">{{ app.user.username }}</button>
                                        <div class="dropdown-content">
                                            <a href="{{ path('app_logout') }}">Выход</a>
                                        </div>
                                    </div>
                                </li>
                            {% endif %}
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <!-- Header end -->
        {% block main %}
            <div class="row main__row d-flex justify-content-center">
                <main class="col-md-10 ml-sm-auto col-lg-10 px-4 shadow bg-white rounded" role="main">
                    {% block content %}
                    {% endblock %}
                </main>
            </div>
        {% endblock %}
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
